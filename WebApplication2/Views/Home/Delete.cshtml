
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h2>@ViewBag.Browsing.Title</h2>
    <p>@ViewBag.Browsing.Author</p>
    <div>
        <h2>Delete?</h2>
        <form method="post">
            <input type="hidden" value="@ViewBag.Browsing.Id" name="NewsId" />
            <div class="row">
                <div class="col-md-10">
                    <p>Введите причину :</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10">
                    <input type="text" name="str" />
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-10">
                    <input type="submit" class="btn btn-primary" value="Отправить" />
                </div>
            </div>

        </form>
</div>
    <div id="results"></div>
</body>
</html>
